/* ========================================
   Minimalist Dark Theme for PySide6
   Class-Based Styling (objectName)
   Primary Color: Light Blue (#4FC3F7)
   Clean, Modern, Elegant
   ======================================== */

/* === Global Styles === */
* {
    font-family: 'Segoe UI', 'San Francisco', 'Roboto', sans-serif;
    font-size: 14px;
    color: #E8E8E8;
    outline: none;
}

QWidget {
    background-color: #1A1A1A;
    color: #E8E8E8;
}

QMainWindow {
    background-color: #1A1A1A;
}

QMainWindow::separator {
    background-color: transparent;
    width: 1px;
    height: 1px;
}

QMainWindow::separator:hover {
    background-color: #4FC3F7;
}

/* ========================================
   BUTTON CLASSES
   ======================================== */

/* Default Button */
#btn, .btn, QPushButton {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
    color: #E8E8E8;
    font-weight: 500;
}

#btn:hover, .btn:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#btn:pressed, .btn:pressed {
    background-color: rgba(79, 195, 247, 0.25);
}

#btn:disabled, .btn:disabled {
    color: #555555;
}

/* Primary Button */
#btn-primary {
    background-color: #4FC3F7;
    color: #0A0A0A;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
}

#btn-primary:hover {
    background-color: #6DD5FF;
}

#btn-primary:pressed {
    background-color: #29B6F6;
}

/* Danger Button */
#btn-danger {
    background-color: transparent;
    color: #FF5252;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
}

#btn-danger:hover {
    background-color: rgba(255, 82, 82, 0.15);
    color: #FF5252;
}

#btn-danger:pressed {
    background-color: rgba(255, 82, 82, 0.25);
}

/* Success Button */
#btn-success {
    background-color: #4CAF50;
    color: #0A0A0A;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
}

#btn-success:hover {
    background-color: #66BB6A;
}

#btn-success:pressed {
    background-color: #388E3C;
}

/* Warning Button */
#btn-warning {
    background-color: #FFC107;
    color: #0A0A0A;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
}

#btn-warning:hover {
    background-color: #FFD54F;
}

#btn-warning:pressed {
    background-color: #FFA000;
}

/* Icon Button (Square) */
#btn-icon {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 8px;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
}

#btn-icon:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#btn-icon:pressed {
    background-color: rgba(79, 195, 247, 0.25);
}

/* Outlined Button */
#btn-outlined {
    background-color: transparent;
    border: 2px solid #4FC3F7;
    border-radius: 8px;
    padding: 10px 20px;
    color: #4FC3F7;
}

#btn-outlined:hover {
    background-color: rgba(79, 195, 247, 0.1);
}

#btn-outlined:pressed {
    background-color: rgba(79, 195, 247, 0.2);
}

/* ========================================
   INPUT CLASSES
   ======================================== */

/* Default Input */
#input, .input, QLineEdit {
    background-color: transparent;
    border: none;
    border-bottom: 2px solid #333333;
    border-radius: 0px;
    padding: 8px 4px;
    selection-background-color: #4FC3F7;
    selection-color: #0A0A0A;
}

#input:hover, .input:hover {
    border-bottom: 2px solid #4FC3F7;
}

#input:focus, .input:focus {
    border-bottom: 2px solid #4FC3F7;
    background-color: rgba(79, 195, 247, 0.05);
}

#input:disabled, .input:disabled {
    color: #555555;
    border-bottom: 2px solid #2A2A2A;
}

/* Boxed Input */
#input-boxed {
    background-color: rgba(255, 255, 255, 0.03);
    border: 2px solid #333333;
    border-radius: 8px;
    padding: 10px 12px;
    selection-background-color: #4FC3F7;
    selection-color: #0A0A0A;
}

#input-boxed:hover {
    border-color: #4FC3F7;
}

#input-boxed:focus {
    border-color: #4FC3F7;
    background-color: rgba(79, 195, 247, 0.05);
}

/* Search Input */
#input-search {
    background-color: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 20px;
    padding: 10px 20px;
    selection-background-color: #4FC3F7;
    selection-color: #0A0A0A;
}

#input-search:hover {
    background-color: rgba(255, 255, 255, 0.08);
}

#input-search:focus {
    background-color: rgba(79, 195, 247, 0.1);
}

/* ========================================
   TEXT AREA CLASSES
   ======================================== */

#textarea, .textarea {
    background-color: rgba(255, 255, 255, 0.03);
    border: none;
    border-radius: 8px;
    padding: 12px;
    selection-background-color: #4FC3F7;
    selection-color: #0A0A0A;
}

#textarea:hover, .textarea:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

#textarea:focus, .textarea:focus {
    background-color: rgba(79, 195, 247, 0.08);
}

/* ========================================
   DROPDOWN/COMBOBOX CLASSES
   ======================================== */

#dropdown, .dropdown, QComboBox {
    background-color: transparent;
    border: none;
    border-bottom: 2px solid #333333;
    border-radius: 0px;
    padding: 8px 4px;
    min-width: 100px;
}

#dropdown:hover, .dropdown:hover {
    border-bottom: 2px solid #4FC3F7;
}

#dropdown:focus, .dropdown:focus {
    border-bottom: 2px solid #4FC3F7;
}

#dropdown::drop-down, .dropdown::drop-down {
    border: none;
    width: 30px;
}

