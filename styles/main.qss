QComboBox QAbstractItemView {
    background-color: #242424;
    border: 1px solid #4FC3F7;
    border-radius: 8px;
    selection-background-color: #4FC3F7;
    selection-color: #0A0A0A;
    padding: 6px;
}

QComboBox QAbstractItemView::item {
    padding: 10px 12px;
    border-radius: 6px;
    border: none;
}

QComboBox QAbstractItemView::item:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #4FC3F7;
    color: #0A0A0A;
}

/* ========================================
   CARD CLASSES
   ======================================== */

#card {
    background-color: rgba(255, 255, 255, 0.03);
    border: none;
    border-radius: 12px;
    padding: 16px;
}

#card-elevated {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 20px;
}

#card-outlined {
    background-color: transparent;
    border: 2px solid #333333;
    border-radius: 12px;
    padding: 16px;
}

/* ========================================
   LABEL CLASSES
   ======================================== */

#label, .label {
    background-color: transparent;
    border: none;
    color: #E8E8E8;
}

#label-title {
    font-size: 24px;
    font-weight: 700;
    color: #E8E8E8;
}

#label-subtitle {
    font-size: 18px;
    font-weight: 600;
    color: #B8B8B8;
}

#label-header {
    font-size: 16px;
    font-weight: 600;
    color: #E8E8E8;
}

#label-muted {
    color: #888888;
    font-size: 13px;
}

#label-caption {
    color: #666666;
    font-size: 12px;
}

#label-accent {
    color: #4FC3F7;
    font-weight: 600;
}

#label-danger {
    color: #FF5252;
    font-weight: 600;
}

#label-success {
    color: #4CAF50;
    font-weight: 600;
}

#label-warning {
    color: #FFC107;
    font-weight: 600;
}

/* ========================================
   PANEL CLASSES
   ======================================== */

#panel {
    background-color: rgba(255, 255, 255, 0.02);
    border: none;
}

#panel-sidebar {
    background-color: #1A1A1A;
    border-right: 1px solid #2A2A2A;
}

#panel-header {
    background-color: #1A1A1A;
    border-bottom: 1px solid #2A2A2A;
    padding: 12px;
}

#panel-footer {
    background-color: #1A1A1A;
    border-top: 1px solid #2A2A2A;
    padding: 12px;
}

/* ========================================
   LIST CLASSES
   ======================================== */

#list, .list, QListWidget {
    background-color: transparent;
    border: none;
    padding: 4px;
}

#list::item, .list::item {
    padding: 10px 12px;
    border-radius: 8px;
    border: none;
}

#list::item:hover, .list::item:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#list::item:selected, .list::item:selected {
    background-color: rgba(79, 195, 247, 0.25);
    color: #4FC3F7;
}

/* Compact List */
#list-compact::item {
    padding: 6px 8px;
    border-radius: 6px;
}

/* ========================================
   TABLE CLASSES
   ======================================== */

#table, .table, QTableWidget {
    background-color: transparent;
    border: none;
    gridline-color: #2A2A2A;
}

#table::item, .table::item {
    padding: 10px;
    border: none;
}

#table::item:hover, .table::item:hover {
    background-color: rgba(79, 195, 247, 0.1);
}

#table::item:selected, .table::item:selected {
    background-color: rgba(79, 195, 247, 0.2);
    color: #4FC3F7;
}

QHeaderView::section {
    background-color: transparent;
    color: #888888;
    padding: 10px;
    border: none;
    border-bottom: 1px solid #333333;
    font-weight: 600;
}

QHeaderView::section:hover {
    color: #4FC3F7;
}

/* ========================================
   PROGRESS BAR CLASSES
   ======================================== */

#progress, .progress, QProgressBar {
    background-color: #2A2A2A;
    border: none;
    border-radius: 8px;
    text-align: center;
    height: 8px;
    color: transparent;
}

#progress::chunk, .progress::chunk, QProgressBar::chunk {
    background-color: #4FC3F7;
    border-radius: 8px;
}

#progress-success::chunk {
    background-color: #4CAF50;
}

#progress-warning::chunk {
    background-color: #FFC107;
}

#progress-danger::chunk {
    background-color: #FF5252;
}

/* ========================================
   SLIDER CLASSES
   ======================================== */

#slider::groove:horizontal, .slider::groove:horizontal {
    height: 4px;
    background-color: #333333;
    border-radius: 2px;
}

#slider::handle:horizontal, .slider::handle:horizontal {
    background-color: #4FC3F7;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

#slider::handle:horizontal:hover, .slider::handle:horizontal:hover {
    background-color: #6DD5FF;
    width: 18px;
    height: 18px;
    margin: -7px 0;
}

#slider::sub-page:horizontal, .slider::sub-page:horizontal {
    background-color: #4FC3F7;
    border-radius: 2px;
}

/* ========================================
   CHECKBOX CLASSES
   ======================================== */

#checkbox, .checkbox, QCheckBox {
    spacing: 10px;
}

#checkbox::indicator, .checkbox::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #555555;
    border-radius: 5px;
    background-color: transparent;
}

#checkbox::indicator:hover, .checkbox::indicator:hover {
    border-color: #4FC3F7;
    background-color: rgba(79, 195, 247, 0.1);
}

#checkbox::indicator:checked, .checkbox::indicator:checked {
    background-color: #4FC3F7;
    border-color: #4FC3F7;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTQiIGhlaWdodD0iMTQiIHZpZXdCb3g9IjAgMCAxNCAxNCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTIgN0w2IDExTDEyIDMiIHN0cm9rZT0iIzBBMEEwQSIgc3Ryb2tlLXdpZHRoPSIyLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
}

#checkbox::indicator:checked:hover, .checkbox::indicator:checked:hover {
    background-color: #6DD5FF;
    border-color: #6DD5FF;
}

/* ========================================
   RADIO BUTTON CLASSES
   ======================================== */

#radio, .radio, QRadioButton {
    spacing: 10px;
}

#radio::indicator, .radio::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #555555;
    border-radius: 11px;
    background-color: transparent;
}

#radio::indicator:hover, .radio::indicator:hover {
    border-color: #4FC3F7;
    background-color: rgba(79, 195, 247, 0.1);
}

#radio::indicator:checked, .radio::indicator:checked {
    background-color: transparent;
    border: 2px solid #4FC3F7;
}

#radio::indicator:checked::after, .radio::indicator:checked::after {
    width: 10px;
    height: 10px;
    border-radius: 5px;
    background-color: #4FC3F7;
}

/* ========================================
   SCROLLBAR CLASSES
   ======================================== */

#scrollbar:horizontal, QScrollBar:horizontal {
    background-color: transparent;
    height: 10px;
    border-radius: 5px;
}

#scrollbar::handle:horizontal, QScrollBar::handle:horizontal {
    background-color: #3A3A3A;
    border-radius: 5px;
    min-width: 30px;
}

#scrollbar::handle:horizontal:hover, QScrollBar::handle:horizontal:hover {
    background-color: #4FC3F7;
}

#scrollbar:vertical, QScrollBar:vertical {
    background-color: transparent;
    width: 10px;
    border-radius: 5px;
}

#scrollbar::handle:vertical, QScrollBar::handle:vertical {
    background-color: #3A3A3A;
    border-radius: 5px;
    min-height: 30px;
}

#scrollbar::handle:vertical:hover, QScrollBar::handle:vertical:hover {
    background-color: #4FC3F7;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal,
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    width: 0px;
    height: 0px;
}

/* ========================================
   TAB CLASSES
   ======================================== */

#tabs::pane, QTabWidget::pane {
    background-color: transparent;
    border: none;
    padding: 0px;
    margin-top: 1px;
}

#tabs QTabBar::tab, QTabBar::tab {
    background-color: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 12px 24px;
    margin-right: 4px;
    color: #888888;
}

#tabs QTabBar::tab:hover, QTabBar::tab:hover {
    color: #4FC3F7;
    border-bottom: 2px solid rgba(79, 195, 247, 0.3);
}

#tabs QTabBar::tab:selected, QTabBar::tab:selected {
    color: #4FC3F7;
    border-bottom: 2px solid #4FC3F7;
}

/* ========================================
   MENU CLASSES
   ======================================== */

#menu, QMenu {
    background-color: #242424;
    border: 1px solid rgba(79, 195, 247, 0.3);
    border-radius: 10px;
    padding: 8px;
}

#menu::item, QMenu::item {
    padding: 10px 30px 10px 16px;
    border-radius: 6px;
}

#menu::item:selected, QMenu::item:selected {
    background-color: rgba(79, 195, 247, 0.2);
    color: #4FC3F7;
}

#menu::separator, QMenu::separator {
    height: 1px;
    background-color: #333333;
    margin: 6px 12px;
}

/* ========================================
   TOOLBAR CLASSES
   ======================================== */

#toolbar, QToolBar {
    background-color: #1A1A1A;
    border: none;
    padding: 4px;
    spacing: 2px;
}

#toolbar QToolButton, QToolButton {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 8px;
}

#toolbar QToolButton:hover, QToolButton:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#toolbar QToolButton:pressed, QToolButton:pressed {
    background-color: rgba(79, 195, 247, 0.25);
}

#toolbar QToolButton:checked, QToolButton:checked {
    background-color: rgba(79, 195, 247, 0.2);
    color: #4FC3F7;
}

/* ========================================
   SPIN BOX CLASSES
   ======================================== */

#spinbox, .spinbox {
    background-color: transparent;
    border: none;
    border-bottom: 2px solid #333333;
    border-radius: 0px;
    padding: 8px 4px;
}

#spinbox:hover, .spinbox:hover {
    border-bottom: 2px solid #4FC3F7;
}

#spinbox:focus, .spinbox:focus {
    border-bottom: 2px solid #4FC3F7;
}

#spinbox::up-button, .spinbox::up-button,
#spinbox::down-button, .spinbox::down-button {
    background-color: transparent;
    border: none;
    width: 20px;
}

#spinbox::up-button:hover, .spinbox::up-button:hover,
#spinbox::down-button:hover, .spinbox::down-button:hover {
    background-color: rgba(79, 195, 247, 0.15);
}

/* ========================================
   BADGE/TAG CLASSES
   ======================================== */

#badge {
    background-color: #4FC3F7;
    color: #0A0A0A;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

#badge-danger {
    background-color: #FF5252;
    color: #FFFFFF;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

#badge-success {
    background-color: #4CAF50;
    color: #FFFFFF;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

#badge-warning {
    background-color: #FFC107;
    color: #0A0A0A;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

#badge-outline {
    background-color: transparent;
    color: #4FC3F7;
    border: 2px solid #4FC3F7;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

/* ========================================
   SEPARATOR CLASSES
   ======================================== */

#separator, .separator {
    background-color: #333333;
    max-height: 1px;
    margin: 12px 0px;
}

#separator-vertical {
    background-color: #333333;
    max-width: 1px;
    margin: 0px 12px;
}

/* ========================================
   TOOLTIP CLASSES
   ======================================== */

QToolTip {
    background-color: #2A2A2A;
    color: #E8E8E8;
    border: 1px solid rgba(79, 195, 247, 0.3);
    border-radius: 6px;
    padding: 8px 12px;
}

/* ========================================
   GROUP BOX CLASSES
   ======================================== */

#groupbox, .groupbox, QGroupBox {
    background-color: transparent;
    border: none;
    border-top: 2px solid #333333;
    border-radius: 0px;
    margin-top: 16px;
    padding-top: 20px;
    font-weight: 600;
}

#groupbox::title, .groupbox::title, QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 0px;
    padding: 0 4px 8px 0;
    background-color: transparent;
    color: #4FC3F7;
}

/* ========================================
   TREE WIDGET CLASSES
   ======================================== */

#tree, .tree, QTreeWidget {
    background-color: transparent;
    border: none;
    padding: 4px;
}

#tree::item, .tree::item {
    padding: 8px;
    border-radius: 6px;
}

#tree::item:hover, .tree::item:hover {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#tree::item:selected, .tree::item:selected {
    background-color: rgba(79, 195, 247, 0.25);
    color: #4FC3F7;
}

#tree::branch:hover, .tree::branch:hover {
    background-color: rgba(79, 195, 247, 0.1);
}

/* ========================================
   DOCK WIDGET CLASSES
   ======================================== */

#dock, .dock, QDockWidget {
    background-color: transparent;
    border: none;
}

#dock::title, .dock::title, QDockWidget::title {
    background-color: transparent;
    padding: 8px;
    border: none;
}

QDockWidget::close-button, QDockWidget::float-button {
    border: none;
    background-color: transparent;
    padding: 4px;
    border-radius: 4px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background-color: rgba(79, 195, 247, 0.2);
}

/* ========================================
   SPLITTER CLASSES
   ======================================== */

#splitter::handle, .splitter::handle, QSplitter::handle {
    background-color: transparent;
}

#splitter::handle:hover, .splitter::handle:hover, QSplitter::handle:hover {
    background-color: #4FC3F7;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}

/* ========================================
   DIALOG CLASSES
   ======================================== */

#dialog, .dialog, QDialog {
    background-color: #1A1A1A;
}

/* ========================================
   STATUSBAR CLASSES
   ======================================== */

#statusbar, .statusbar, QStatusBar {
    background-color: #1A1A1A;
    border: none;
    color: #888888;
}

/* ========================================
   MENUBAR CLASSES
   ======================================== */

#menubar, .menubar, QMenuBar {
    background-color: #1A1A1A;
    border: none;
    padding: 4px;
}

#menubar::item, .menubar::item, QMenuBar::item {
    background-color: transparent;
    padding: 8px 16px;
    border-radius: 6px;
}

#menubar::item:selected, .menubar::item:selected, QMenuBar::item:selected {
    background-color: rgba(79, 195, 247, 0.15);
    color: #4FC3F7;
}

#menubar::item:pressed, .menubar::item:pressed, QMenuBar::item:pressed {
    background-color: rgba(79, 195, 247, 0.25);
    color: #4FC3F7;
}
